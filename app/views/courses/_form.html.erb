<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :description %>
    <%= f.input :first_day, :as => :date_picker, :class => 'date_picker' %>
    <%= f.input :last_day, :as => :date_picker,  :class => 'date_picker' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>
