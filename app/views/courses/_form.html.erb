<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :description %>
    <%= f.input :first_day, :as => :date_picker, :class => 'date_picker' %>
    <%= f.input :last_day, :as => :date_picker,  :class => 'date_picker' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>

  <%# button_to "Add Students to Roster", new_roster(@course) %>

  <fieldset>
    <legend>Class Roster</legend>
    <%= simple_fields_for(@course) do |f| %>
      <%= Student.all.inspect %>
      <%= Student.all.map { |s| [s.full_name, s.id]} %>
      <%= link_to_add_roster_fields "Add Student" %>
      <ol>
        <%= render(@course.students) %>
      </ol>
    <% end %>

  </fieldset>
<% end %>
