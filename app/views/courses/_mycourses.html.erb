<h2 style="display: inline-block">My Courses</h2>
<%= link_to 'New Course', new_course_path, :class => 'btn btn-primary', :style => "float:right;" if current_user.is_a_teacher? %>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Code</th>
    <th>Description</th>
    <th>First day</th>
    <th>Last day</th>
    <% if current_user.is_a_teacher? %>
      <th>Actions</th>
    <% end %>
  </tr>

  <%= render @courses %>
</table>

