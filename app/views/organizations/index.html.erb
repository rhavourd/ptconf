<h1>Organizations</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </thead>
  
  <tbody>
    <% @organizations.each do |organization| %>
    <tr>
      <td><%= link_to organization.name, organization %></td>
      <td>
        <%= link_to 'Edit', edit_organization_path(organization), :class => 'btn btn-mini' %>
        <%= link_to 'Destroy', organization, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger'  %>
      </td>
    </tr>
    <% end %>
  </tbody>
  
</table>

<br />

<%= link_to 'New Organization', new_organization_path, :class => 'btn btn-primary' %>
