<tr class="meeting">
  <td><%= period.formatted_start_time %></td>
  <td id="period-<%= period_counter %>" class="<%= period.status.downcase %>"><%= period.status %></td>
  <td id="period-<%= period_counter %>-btn">
    <%  if period.is_available? %>
      <%= make_schedule_button(conference_date, period, period_counter, @student) %>
    <% else %>
      <%= period.meet_with %>
      <%= cancel_schedule_button(conference_date, period, period_counter, @student) %>
    <% end %>
  </td>
</tr>
