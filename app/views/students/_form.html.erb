<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, autofocus: true %>
    <%= f.input :last_name %>
    <%= f.input :full_name %>
    <%= f.input :nickname %>
    <%= f.association :organization %>
  </div>
  
  <fieldset>
    <legend>Parents &ndsp; <%= link_to_add_fields "Add Parent", f, :parents %></legend>
    <ol>
      <%= render 'parent_fields', :collection => @parents %>
    </ol>
  </fieldset>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
